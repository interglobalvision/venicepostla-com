// HEADER

.header-title
  position: fixed
  z-index: 100
  text-align: center

#header-title-venice, #header-title-post
  left: 10%
  width: 80%

#header-title-venice
  top: 0
  padding-top: $margin-basic

#header-title-post
  bottom: 0
  padding-bottom: $margin-basic

#header-title-about, #header-title-contact
  top: 50vh

#header-title-about
  left: 0
  padding-left: $margin-basic

#header-title-contact
  right: 0
  padding-right: $margin-basic

.header-title-rotate-counter
  display: block
  transform: rotate(-90deg)

.header-title-rotate-clockwise
  display: block
  transform: rotate(90deg)
